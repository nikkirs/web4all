<!DOCTYPE html>
<html>
  <head>
    <!--Import Google Icon Font-->
    <link
      href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet"
    />
    <!--Import materialize.css-->
    <link
      type="text/css"
      rel="stylesheet"
      href="../css/materialize.min.css"
      media="screen,projection"
    />
    <link
      rel="stylesheet"
      href="https://use.fontawesome.com/releases/v5.8.2/css/all.css"
      integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay"
      crossorigin="anonymous"
    />
    <!-- <link type="text/css" rel="stylesheet" href="../css/style.css" /> -->
    <style>
      figure img {
        height: 250px;
        width: 250px;
        border-radius: 50%;
      }
      .courses {
        margin: 0px;
        padding: 20px;
        text-align: center;
      }
      span,
      h5 {
        font-family: "Franklin Gothic Medium", "Arial Narrow", Arial, sans-serif;
      }
      .c-img {
        height: 400px;
        width: 300px;
        padding: 20px 5px;
      }
    </style>

    <!--Let browser know website is optimized for mobile-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  </head>
  <body>
    <div class="navbar-fixed">
      <nav class=" white-text">
        <div class="container">
          <div class="nav-wrapper">
            <a href="/" class="brand-logo">Web4All </a>
            <a href="/" data-target="mobile-nav" class="sidenav-trigger">
              <i class="material-icons">menu</i></a
            >

            <ul class="right hide-on-med-and-down" style="color:black">
              <li>
                <a href="/">Home</a>
              </li>

              <li>
                <a class="waves-effect waves-light btn" href="/logout"
                  >Logout</a
                >
              </li>
            </ul>
          </div>
        </div>
      </nav>
    </div>

    <ul class="sidenav" id="mobile-nav">
      <li>
        <a href="/">Home</a>
      </li>

      <li>
        <a href="/logout">Logout</a>
      </li>
    </ul>

    <div class="courses">
      <div class="row z-depth-2">
        <div class="col s12 m12 l3  ">
          <h5>Your Profile</h5>
          <figure class="card-profile-image">
            <img src=<%=user.gravatar%> alt="profile image" class="circle
            z-depth-2 responsive-img activator" />
          </figure>

          <div class="card z-depth-0">
            <div class="card-content ">
              <span class="card-title"><%=user.name%></span>
              <p>
                Email id: <%=user.email_id%> <br />
                College:<%=user.college%> <br />
                Branch: <%=user.branch%>
              </p>
            </div>
          </div>
        </div>
        <div class="col s12 m12 l9 ">
          <div class="card z-depth-0">
            <div class="row">
              <div class="col s12 m12 l6">
                <div class="card-image waves-effect waves-block waves-light">
                  <img class="activator c-img" src=<%=course.course_img%> />
                </div>
              </div>

              <div class="col s12 m12 l6">
                <div class="card-image waves-effect waves-block waves-light">
                  <div class="card z-depth-0">
                    <div class="card-content" style="padding:0px 10px;">
                      <span>
                        <h5>Course Details:</h5>
                      </span>
                      <p>
                        <%=course.course_details%>
                        <br />
                      </p>
                      <span>
                        <h5>About:</h5>
                      </span>
                      <p>
                        <%=course.course_knowledge%>
                      </p>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <div class="card-content" style="padding-top:0px">
              <span class="card-title activator grey-text text-darken-4"
                >Course Name : <%=course.course_name%><i
                  class="material-icons right"
                  >more_vert</i
                ></span
              >
            </div>
            <div class="card-reveal">
              <span class="card-title grey-text text-darken-4"
                >Course Curriculum<i class="material-icons right"
                  >close</i
                ></span
              >
              <div class="collection">
                <%chapter.forEach(function(m){%>
                <a class="collection-item" style="color:black">
                  <%=m.chapter_name%></a
                >
                <% })%>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="row content">
        <div class="col s12 m5 l5">
          <div class="card ">
            <div class="card-content ">
              <span class="card-title">Course Content</span>
              <div class="collection">
                <%chapter.forEach(function(m){%>
                <a
                  href="<%=m.link%>"
                  class="collection-item"
                  style="color:black"
                >
                  <%=m.chapter_name%></a
                >
                <% })%>
              </div>
            </div>
          </div>
        </div>

        <div class="col s12 m7 l7" style="padding:20px 10px">
          <!-- <div class="video-container">
            <iframe
              width="853"
              height="480"
              src="../img/Welcome To The Course.mp4"
              frameborder="0"
              allowfullscreen
            ></iframe>
          </div> -->
          <video
            id="myvid"
            class="video-js vjs-default-skin vjs-big-play-centered"
            controls
            preload="none"
            width="640"
            height="360"
            src="../img/React JS _ Redux.mp4"
            poster=""
            data-setup="{}"
          ></video>

          <%if(review.review==null){%>
          <div class="card z-depth-0">
            <div class="row">
              <form class="col s12" action="/review" method="POST">
                <div class="row">
                  <div style="display:none">
                    <input type name="courseid" value=<%=course.course_id%> />
                  </div>
                  <div class="input-field col s6">
                    <i class="material-icons prefix">mode_edit</i>
                    <textarea
                      id="icon_prefix2"
                      class="materialize-textarea"
                      name="review"
                    ></textarea>
                    <label for="icon_prefix2">Review</label>
                  </div>
                </div>

                <button
                  class="btn btn-medium btn-register waves-effect waves-light"
                  type="submit"
                  name="action"
                >
                  Submit
                  <i class="material-icons right">done</i>
                </button>
              </form>
            </div>
          </div>

          <%}%>
        </div>
      </div>
    </div>
    <script type="text/javascript" src="../js/materialize.min.js"></script>

    <script type="text/javascript" src="../js/style.js"></script>
  </body>
</html>
